<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= hidden_field_tag "user[towns][]", "novi sad" %>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, :autofocus => true, :class => "form-control", :placeholder => "ana@example.com" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, :autocomplete => "off", :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, :autocomplete => "off", :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :streets %>
    <%= f.text_field :streets, :autocomplete => "off", :class => "form-control", :placeholder => "Bulevar Oslobođenja, Miletićeva, Svetozara Miletića, Grbavica" %>
    <div class="form-text">Unesite ulice i delove grada u Novom Sadu koje vas interesuju, odvojene zarezom. Preporučujemo Vam da unesete naziv ulice u svim oblicima koji se koriste u redovnoj upotrebi. Na primer "Svetozara Miletića" i "Miletićeva". Nije neophodno koristiti latinične karaktere.</div>
  </div>

  <div class="form-group">
    <%= label_tag :captcha_answer, Rails.application.credentials.captcha_question %>
    <%= text_field_tag :captcha_answer, "", :class => "form-control" %>
    <div class="form-text">Sigurnosno pitanje.</div>
  </div>

  <%= f.submit t("sign_up"), :class => "btn btn-primary" %>

  <p class="mt-3">
    Pre registracije, molimo vas da se upoznate sa
    <%= link_to "uslovima korišćenja", terms_path, :target => "_blank" %>.
  </p>
<% end %>

<%= render "users/shared/links" %>
